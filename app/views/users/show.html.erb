<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>
        Highscore: <%= @user.highgame[:score] %>
      </p>
    </section>
    <div class="col-md-8">
      <% if @games.any? %>
        <h3>Games: <%= @games.count %></h3> 
        <ol class="games">
          <%= render @games %>
        </ol>
      <% end %>
    </div>
</div>
